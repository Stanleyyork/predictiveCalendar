<div class="container">
	<div class="row">
		<div id="sync" data="<%= @syncing %>"><% @syncing %></div>
		<p id="progress-bar-check"></p>
		<div class="progress hidden">
		  <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100" style="width: 1%" id="progress_bar">
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
		<div class="well" data-toggle="tooltip" data-placement="top" title="Only one calendar permitted at this time">
			<%= link_to "Sync Calendar", '/import_events', class: 'btn btn-success import' %>
		</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<div class="well">
			<%= form_for :user, url: '/settings' do |f| %>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.text_field :email, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="form-group">
					<div class="checkbox">			
						<%= f.check_box :private_profile %>
						<%= f.label :private_profile %>
					</div>
				</div>
				<div class="form-group">
					<div class="checkbox" data-toggle="tooltip" data-placement="top" title="i.e. don't query events labeled 'DNS', 'OOO', cancelled, etc.">			
						<%= f.check_box :smart_query %>
						<%= f.label :smart_query %>
					</div>
				</div>
				<div class="form-group">
					<%= f.submit "Submit", class: 'btn btn-default' %>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>

